{
  "name": "iono-jp/iono",
  "description": "php micro framework for api",
  "minimum-stability": "stable",
  "license": "MIT",
  "keywords": ["rest", "microframework", "api"],
  "authors": [
    {
      "name": "yuuki.takezawa",
      "email": "yuuki.takezawa@comnect.jp.net"
    }
  ],
  "require": {
    "php": ">=5.5",
    "illuminate/container": "5.*",
    "iono/dispatcher": "0.*",
    "klein/klein": "2.*",
    "nikic/fast-route": "*",
    "symfony/http-foundation": "2.*",
    "classpreloader/classpreloader": "1.*",
    "monolog/monolog": "1.*",
    "jms/serializer": "0.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*",
    "satooshi/php-coveralls": "dev-master",
    "facebook/xhprof": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Iono\\Micro\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
  }
}
